<table>
  <tbody>
    <% @book.book_comments.each do |comment| %>
      <tr>
        <td>
          <%= link_to(comment.user) do %>
            <%= image_tag comment.user.get_profile_image, size:'50x50' %><br>
            <%= comment.user.name %>
          <% end %>
        </td>
        <td><%= comment.comment %></td>
        <td><%= link_to 'Destroy', book_book_comment_path(comment.book,comment), method: :delete, remote: true, class: "btn btn-sm btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= form_with model: [@book,@book_comment],local: false do |f|%>
  <div>
    <%= f.label :comment %>
  </div>
  <div>
    <%= f.text_area :comment %>
  </div>
  <div>
    <%= f.submit "送信" %>
  </div>
<% end %>